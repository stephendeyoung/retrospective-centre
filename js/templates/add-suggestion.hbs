
<div class="md-modal md-effect-15">
    <div class="md-content">
        <button class="md-close" {{action 'removeModal'}}>
            <span class="icon-remove-sign icon-large"></span>
            <span class="visuallyhidden">Close</span>
        </button>
        <h3>Make a suggestion</h3>
        <form class="ink-form" {{action 'createSuggestion' on='submit'}}>
            <div class="control-group">
                <label for="group">Group</label>
                <div class="control">
                    {{view Ember.Select viewName="select"
                                        contentBinding="suggestionGroups"
                                        optionLabelPath="content.name"
                                        optionValuePath="content.id"
                                        prompt="Choose a suggestion type:"
                                        valueBinding="group"}}
                </div>
            </div>
            <div class="control-group">
                <label for="title">Title</label>
                <div class="control">
                    {{view Ember.TextField valueBinding='title' type='text' id='title'}}
                </div>
            </div>
            <div class="control-group">
                <label for="description">Description</label>
                <div class="control">
                    {{view Ember.TextArea valueBinding='description' type='text' id='description' rows='10'}}
                </div>
            </div>
            <div class="control-group">
                <input type="submit" value="Create" class="ink-button blue">
            </div>
        </form>
    </div>
</div>

<div class="md-overlay"></div>